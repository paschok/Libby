<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyMainTextViewStyle">

        <item name="android:padding">25dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:width">140dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyBookStyle">
        <item name="android:textColor">@color/book_item_color</item>
        <!-- <item name="android:layout_marginLeft">8dp</item> -->
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyBookNameStyle">
        <item name="android:textColor">@color/book_item_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyBookButtonsStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/book_buttons_color</item>
    </style>
</resources>
